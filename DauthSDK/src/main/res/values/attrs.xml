<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="BaseButton">

        <attr name="iconSize" format="dimension" />
        <attr name="iconPadding" format="dimension" />
        <attr name="iconCenterAligned" format="boolean" />
        <attr name="roundedCorner" format="boolean" />
        <attr name="transparentBackground" format="boolean" />
        <attr name="roundedCornerRadius" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="android:textColor" tools:ignore="ResourceName" />

    </declare-styleable>

</resources>
